{% extends "master" %}

{% block content %}

  <div class="container container-container">
    <div class="card card-width">
    <div class="card-content grey-text-darken-2">
    <span class="card-title">Register</span>
  <div class="row">
      <form class="col s12" action="/register" method="POST">
        {{ csrfField }}
        <div class="row">
          <div class="input-field col s12">
            <input id="user_name" type="text" name="user_name" class="validate" value="{{ old('user_name') }}">
            <label for="user_name">Username</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" name="email" class="validate" value="{{ old('email') }}">
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="col s6 right-align ">
            <a href="/login" class="waves-effect waves-light btn grey lighten-1">
              <i class="material-icons left">skip_previous</i>Log In</a>
          </div>
          <div class="col s6 left-align">
          <button type="submit" class="waves-effect waves-light btn blue darken-3">
            Submit</button>
          </div>
            </div>
      </form>
    </div>
  </div>
  </div>
  </div>


{% endblock %}
